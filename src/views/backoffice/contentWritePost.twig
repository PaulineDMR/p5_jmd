{% extends 'templateAdminPosts.twig' %}


{% block content %}
		
	<div class="row 100%">
		<div class="8u 12u$(medium)">

			<!-- Content -->
			<section id="content">
				<form action="index.php?action=updatePost&amp;id={{postId}}" method="POST" class="form-section">
				
					<label for="title">Titre de l'article :<input type="text" name="title" value="Ecrire votre titre ici" class="painting-fields"></label>
					
					
					<textarea name="content" rows="15">Votre texte</textarea>

					<label for="category">Cat√©gorie(s) de l'article :
			
						<label for="category">Ajouter des categories (plusieurs choix possibles) :

							<div>
								{% for cat in categories %}

								<input type="checkbox" name="category[]" value="{{ cat.name | lower }}" id="{{ loop.index }}">
								<label for="{{ loop.index }}">{{ cat.name }}</label>

								{% endfor %}
							</div>
						</label>	
					</label>

					<button type="submit" name="submit" class="button special icon fa-checked">Enregister</button>
				</form>		
			</section>
		</div>

		<div class="4u$ 12u$(medium)">

			<!-- Sidebar -->
			<section id="sidebar">
				<section>

					{% for img in imgs %}
					
						<div>
							<img src="{{img.url}}" alt="photo de blog de Jeanne-Marie Desmares" style="width: 100%">
							<a href="index.php?action=updatePost&amp;choice=deleteImg&amp;file={{img.fileName}}&amp;id={{ post.id }}">Supprimer</a>
						</div>
						<hr>
			    
					{% endfor %}

					<form action="index.php?action=updatePost&amp;choice=addImg&amp;id={{postId}}" method="POST" enctype="multipart/form-data">
						<div>
							<input type="file" name="file" required>
						</div>
						<button type="submit" name="submit" class="button alt small icon fa-plus">Ajouter l'image</button>
					</form>

					
				</section>
			</section>

		</div>
	</div>

	<p></p>
    
{% endblock %}