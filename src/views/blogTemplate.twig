{% extends 'frontendLayout.twig' %}


{% block title %}

Blog - {{ parent() }}

{% endblock title%}


{% block head %} 
	
	<link rel="stylesheet" href="assets/css/blog.css" />

{% endblock head %}


{% block main %}

	<section id="main">
		<div class="container">
			<header class="major">
				<h2>BLOG</h2>
				<p>SUIVEZ LES BALLADES, TRAVAUX DE L'ARTISTE ET PLONGEZ DANS SON UNIVERS DE LUMIÈRES ET PAYSAGES CORSES</p>
			</header>

			<div class="row 200%">
				<div class="8u 12u$(medium)">

					<!-- Content -->
					<section id="content">

						{% block articles %}
			    
						{% endblock articles %}
	
					

					{% block pagination %}
				    
					{% endblock pagination %}	
					</section>
				</div>
    

				<div class="4u$ 12u$(medium)">

				<!-- Sidebar -->
					<section id="sidebar">
						<section>
							<h4>Le temps à Saint Florent</h4>
							<div id="meteo">
								<div id="meteo1">
									<img src="" alt="icone météo" id="icon-cond">
								</div>
								<div id="meteo2">
									<p id="temp"></p>
									<p id="tmp-min-max"></p>
									<p id="cond"></p>
									<p id="wind">Vent: <span id="wind-span"></span></p>
									<p id="press">Pression: <span id="pressure-span"></span></p>
								</div>
							</div>
						</section>
						<hr />
						<section>
							<h4>Le Blog</h4>
							<p>Je raconte ici mes ballades, mes escapades, ma Corse et un peu de mon quotidien.<br>
							J'espère vous inspirer à mon tour, vous donner l'envie de découvrir cette île aux milles facettes ou vous faire voyager à travers mes récits.</p>
							<footer>
								<ul class="actions">
									<li><a href="index.php?action=about" class="button small alt">Découvrir l'Artiste</a></li>
								</ul>
							</footer>
						</section>
						<hr />
						<section id="small-portfolio">
							<h4>Les oeuvres récentes</h4>

							{% block portfolio %}
							    
							{% endblock %}

							<footer id="paintings-button">
								<ul class="actions">
									<li><a href="index.php?action=portfolio" class="button small alt">Portfolio</a></li>
								</ul>
							</footer>
						</section>

						<hr />
						<section>
							<h4>Catégories</h4>

							{% block categories %}
							    
							{% endblock %}

						</section>

						<hr />
						<section>
							<h4>Articles récents</h4>

							{% block recentPosts %}
							    
							{% endblock %}

						</section>

						<hr />
						<section>
							<h4>ENVOYER UN MAIL</h4>
							<a href="index.php?action=about#contact"><span class="mail icon fa-envelope-o"></span></a>
						</section>	
					</section>
				</div>
			</div>
		</div>
	</section>

			    
{% endblock main%}


{% block script %}

	<!-- scrpipts personnalisés "Objets" -->
    <script type="text/javascript" src="assets/js/meteo.js"></script>
    <script type="text/javascript" src="assets/js/alert.js"></script>
	<!-- Scripts pésonnalisés "lancement" -->

	<script type="text/javascript" src="assets/js/blog.js"></script>

			    
{% endblock script %}

